<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {title: "Mi Perfil"}) %>
    <link rel="stylesheet" href="/css/style.css">
<body>
    <%- include('partials/header') %> 
    <div class="containerProfile">
           
    

        <div class="perfil">  
            
            <% if(typeof usuario.id_rol === 9 ) {%>
                
                <div class="fotoPerfil">
                    <img class="" src="/images/users/<%= miPerfil.avatar %>" alt="" value="">
                </div>

            <div class="datosperfil">
                 <h3><%= miPerfil.name %> <%= miPerfil.surname %> </h3>

                <h3 class="email"><%= miPerfil.email %></h3>
            </div>

                <div class="submit">
                    <a href="/users/perfil/<%= miPerfil.id %>/edit">
                    <button class="btn">Editar mi perfil</button></a>
                </div>

                <div class="submit">
                    <a href="/users/listadoUsuarios">
                    <button class="btn">Usuarios</button></a>
                </div>

                <div class="submit">
                    <a href="/users/productcart">
                    <button class="btn">Mi carrito</button></a>
                </div>

                <div class="submit">
                    <a href="/users/logOut">
                    <button class="btn">Cerrar Sesión</button></a>
                </div>

            <% } else { %>

                <h2 class="titulo">Mi Perfil</h2>

                <div class="fotoPerfil">
                    <img class="" src="/images/users/<%= miPerfil.avatar %>" alt="" value="">
                </div>

            <div class="datosperfil">
                 <h3><%= miPerfil.name %> <%= miPerfil.surname %></h3>


                <h3 class="email"><%= miPerfil.email %></h3>
            </div>

                <div class="submit">
                    <a href="/users/perfil/<%= miPerfil.id %>/edit">
                    <button class="btnPerfil">Editar mi perfil</button></a>
                </div>

                <div class="submit">
                    <a href="/productos/catalogo">
                    <button class="btnPerfil">Comprar</button></a>
                </div>

                <div class="submit">
                    <a href="/users/productcart">
                    <button class="btnPerfil">Mi carrito</button></a>
                </div>

                <div class="submit">
                    <a href="/users/logOut">
                    <button class="btnPerfil">Cerrar Sesión</button></a> 
            <% } %> 
        </div>
        </div>    
            
        
    </div>
    <%- include('partials/footer') %>
</body>
</html>